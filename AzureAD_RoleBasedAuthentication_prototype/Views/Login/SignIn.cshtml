@{
    ViewData["Title"] = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CodeCraft - Login</title>
    <!-- Bootstrap 5 CSS -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <style>
        .split-screen {
            min-height: 100vh;
        }

        .left-side {
            background: #333;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            font-weight: bold;
            height: 100%;
        }

        .login-box {
            max-width: 400px;
            width: 100%;
            padding: 40px;
            background: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row vh-100">
            <!-- Left Side (Company Name) -->
            <div class="col-md-6 d-flex justify-content-center align-items-center left-side">
                CodeCraft
            </div>

            <!-- Right Side (Login Form) -->
            <div class="col-md-6 d-flex justify-content-center align-items-center bg-light">
                <div class="login-box">
                    <h2 class="text-center mb-4">Login</h2>

                    <form asp-action="Login" method="post">
                        @* <div class="mb-3">
                            <input class="form-control" placeholder="Username">
                            <span class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" placeholder="Password">
                            <span class="text-danger"></span>
                        </div> *@

                        <!-- Sign In and Sign Up buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Sign In</button>
                            <a asp-action="Register" class="btn btn-outline-secondary">Sign Up</a>
                        </div>

                        <div class="text-center mt-2">
                            <a asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@

</body>
</html>
